mixin desc(desc)
  .desc__card(style= desc.bg)
    .desc__wrap
      .desc__card-image
        img(src= desc.icon alt= desc.alt)
      h3.desc__card-title= desc.title
      p.desc__card-desc.link-text= desc.text
    .desc-link
      .link-logo
        img(src="/content/link-logo.png" alt="link icon")
